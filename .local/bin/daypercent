#!/bin/bash

hours=24
offset=$(((24-$hours)*60*60))

if [[ $1 == "-r" ]]; then 
    echo "$(echo "($(echo "scale=4;($(date -d "1970-01-01 UTC $(date +%T)" +%s)-$offset)/($hours*60*60)*100" | bc | cut -c 1-2)-100)*-1" | bc)%"
else
    # echo "$(echo "scale=4;$(date "+%H")/24*100" | bc | cut -c 1-2)%"
    echo "$(echo "scale=4;($(date -d "1970-01-01 UTC $(date +%T)" +%s)-$offset)/($hours*60*60)*100" | bc | cut -c 1-2)%"
fi

